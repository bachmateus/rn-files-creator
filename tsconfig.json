{
  "display": "Node 16",
  "compilerOptions": {
    "target": "ES2021",  
    "lib": ["ES2021"],
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",    
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["test/**/*.spec.ts"]
}
